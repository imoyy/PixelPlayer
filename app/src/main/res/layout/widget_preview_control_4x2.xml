<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_surface_background"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/album_art"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/widget_album_art_placeholder"
            android:contentDescription="Album Art" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="PixelPlayer"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Tap to open"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/widget_button_secondary_background"
            android:contentDescription="Shuffle"
            android:padding="12dp"
            android:src="@drawable/rounded_shuffle_24"
            app:tint="?android:attr/textColorSecondary" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/widget_button_secondary_background"
            android:contentDescription="Previous"
            android:padding="12dp"
            android:src="@drawable/rounded_skip_previous_24"
            app:tint="?android:attr/textColorSecondary" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/widget_button_primary_background"
            android:contentDescription="Play/Pause"
            android:padding="12dp"
            android:src="@drawable/rounded_pause_24"
            app:tint="?android:attr/colorBackground" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/widget_button_secondary_background"
            android:contentDescription="Next"
            android:padding="12dp"
            android:src="@drawable/rounded_skip_next_24"
            app:tint="?android:attr/textColorSecondary" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/widget_button_secondary_background"
            android:contentDescription="Repeat"
            android:padding="12dp"
            android:src="@drawable/rounded_repeat_24"
            app:tint="?android:attr/textColorSecondary" />
    </LinearLayout>

</LinearLayout>
