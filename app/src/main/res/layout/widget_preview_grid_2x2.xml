<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_surface_background"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/album_art"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/widget_album_art_placeholder"
                android:contentDescription="Album Art" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/widget_button_primary_background"
                android:contentDescription="Play/Pause"
                android:padding="10dp"
                android:src="@drawable/rounded_pause_24"
                app:tint="?android:attr/colorBackground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/widget_button_secondary_background"
                android:contentDescription="Previous"
                android:padding="10dp"
                android:src="@drawable/rounded_skip_previous_24"
                app:tint="?android:attr/textColorSecondary" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/widget_button_secondary_background"
                android:contentDescription="Next"
                android:padding="10dp"
                android:src="@drawable/rounded_skip_next_24"
                app:tint="?android:attr/textColorSecondary" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
